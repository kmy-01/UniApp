        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:drawableStartCompat="@drawable/ic_level_03" />

    <TextView android:id="@+id/tv22"
        style="@style/OptionListItem"
        android:text="@string/priority_level_04"
        android:paddingStart="20dp"
